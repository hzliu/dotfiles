caption always "%{= R}[ %{=b b}%-w%{=rb db}%>%n %t%{-}%+w%{-b}%< %=%{R}][%{M}%D %M %d %{G}%c%{R}]"
startup_message off
vbell off

bindkey -k F1 prev
bindkey -k F2 next

autodetach on
